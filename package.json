{
  "name": "figram",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "dev": "bun run --filter 'figram' dev",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "tsc -b",
    "docs:dev": "bun run --filter '@figram/docs' dev",
    "docs:build": "bun run --filter '@figram/docs' build",
    "docs:preview": "bun run --filter '@figram/docs' preview"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.9",
    "typescript": "^5.7.2"
  }
}
